<!--pages/order.wxml-->
<view class="container">
  <view class="page-label">
    修改指令
  </view>
  <view class="line-point"></view>
  <!-- 命令按钮 -->
  <view class="button-view">
    <view class="button-item" wx:for='{{orders}}' wx:key='{{index}}' bindlongpress="handleEditOrder" data-id='{{index}}'>{{item.name}}</view>
  </view>
  <!-- 输入弹框 -->
  <view class='toast-box' hidden='{{!showForm}}'>
        <view class='toastbg'></view>
        <view class='showToast'>
            <view class='toast-title'>
                <text>修改指令</text>
            </view>
            <view class='toast-main'>
                <view class='toast-input'>
                    <input placeholder='指令名' maxlength="5" bindinput='bindInput' data-item='name' value="{{form.name}}"></input>
                </view>
                <view class='toast-input' style="margin-top:1vh">
                    <input placeholder='按下发送指令值,eg:0x01' maxlength="10" bindinput='bindInput' data-item='touchstart' value="{{form.touchstart}}"></input>
                </view>
                <view class='toast-input' style="margin-top:1vh">
                    <input placeholder='松开发送指令值,eg:0xAB' maxlength="10" bindinput='bindInput' data-item='touchend' value="{{form.touchend}}"></input>
                </view>
            </view>
            <view class='toast-button'>
                <view class='button1'>
                    <button bindtap="hiddenForm">取消</button>
                </view>
                <view class='button2'>
                    <button bindtap='sureSave' data-id='{{nowIndex}}'>确定</button>
                </view>
            </view>
        </view>
    </view>
</view>
/* 修改指令弹出侧开始 */
/* 弹窗样式 */
.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0rem;
  left: 0rem;
  z-index: 99;
}

.toast-box .toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.toast-box .showToast {
  position: absolute;
  opacity: 1;
  width: 30%;
  margin-left: 35%;
  margin-top: 15%;
}

.toast-box .showToast .toast-title {
  padding-left: 5%;
  background-color: #163c87;
  color: #fff;
  padding-top: 0.1rem;
  padding-bottom: 0.1rem;
  border-top-right-radius: 0.4rem;
  border-top-left-radius: 0.4rem;
  font-size: 12rpx;
}

.toast-box .showToast .toast-main {
  background-color: #fff;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  color: #000;
  font-size: 10rpx;
  font-weight: lighter;
}

.toast-box .showToast .toast-input-line{
  width: -webkit-fill-available;
  padding: 0rem 1rem 0rem 1rem;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 0.7rem;
}

.toast-box .showToast .toast-input-line>label{
  padding-right: 0.4rem;
  white-space: nowrap;
  font-weight: 700;
}

.toast-box .showToast .toast-input-line>input{
  flex: 1;
}


.toast-box .showToast .toast-button {
  padding: 0.15rem;
  background-color: #163c87;
  border-bottom-left-radius: 0.4rem;
  border-bottom-right-radius: 0.4rem;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 0.6rem;
}


/* 修改指令弹出侧结束 */
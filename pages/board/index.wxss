/* pages/board/index.wxss */
/*控制中心区域开始*/
/* 页面标题样式 */
.container .page-head{
  width: 100vmax;
  height: 6vmin;
}

/* 页面标题图片背景 */
.container .page-head .page-head-background{
  height: 6vmin;
  width: 100vmax !important;
  position: absolute;
  top: 0;
  left: 0;
}

/* 页面标题文字 */
.container .page-head view{
  width: 100vmin;
  height: 5vmin;
  position: absolute;
  top: 1vmin;
  left: 12vmin;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.container .page-head view .page-name{
  font-size: 12rpx;
}

.container .page-head view .page-clock{
  margin-left: 6vmin;
  font-size: 8rpx;
}

.container .page-head view .page-set{
  margin-left: 5vmin;
  width: 4vmin;
  height: 4vmin;
}

/*控制中心区域盒子样式*/
.container .operation-view{
  width: -webkit-fill-available;
  height: 70vmin;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

/* 上部控制面板盒子 */
.container .operation-view .operation-top{
  flex: 1;
  width: fill-available;
  width: -webkit-fill-available;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/* 方向操作样式 */
.container .operation-view .operation-top .operation-direction{
  height: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/* 方向按键组合 */
.container .operation-view .operation-top .operation-direction .operation-direction-group{
  width: 40vmin;
  height: 40vmin;
}

/* 手柄按键通用样式开始 */
.container .operation-view .operation-top .pie{
  position: relative;
  margin: 1em auto;
  padding: 0;
  border-radius: 50%;
  list-style: none;
  overflow: hidden;
}

.container .operation-view .operation-top .slice {
  overflow: hidden;
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 50%;
  transform-origin: 0% 100%;
}

.container .operation-view .operation-top .slice-one {
  transform: rotate(45deg) skewY(0deg);
}

.container .operation-view .operation-top .slice-two {
  transform: rotate(135deg) skewY(-0deg);
}

.container .operation-view .operation-top .slice-three {
  transform: rotate(225deg) skewY(0deg);
}

.container .operation-view .operation-top .slice-four {
  transform: rotate(315deg) skewY(0deg);
}

.container .operation-view .operation-top .slice-color-style1{
  background-color: #065aab;
}

.container .operation-view .operation-top .slice-color-style2{
  background-color: #096eab;
}
/* 手柄按键通用样式结束 */


/* 仪表盘区域 */
.container .operation-view .operation-top .operation-info{
  height: 100%;
  width: 30%;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/* 仪表盘区域组合 */
.container .operation-view .operation-top .operation-info .operation-info-group{
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 0.8rem;
  width: fit-content;
}

.container .operation-view .operation-top .operation-info .operation-info-group .project-name{
  margin-top: 1.1rem;
  font-size: 1.8rem;
}

/* 档位操作区域 */
.container .operation-view .operation-top .operation-gear{
  height: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
/* 档位按键组合 */
.container .operation-view .operation-top .operation-gear .operation-gear-group{
  width: 40vmin;
  height: 40vmin;
}

/* 底部控制面板区域 */
.container .operation-view .operation-bottom{
  width: fill-available;
  width: -webkit-fill-available;
  height: fit-content;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 1rem;
}

/*单个控制组件容器*/
.container .operation-view .operation-bottom .ctrl-item{
  width: 10rem;
  height: 2rem;
  padding-right: 1rem;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

/*单个控制组件标题*/
.container .operation-view .operation-bottom .ctrl-item .ctrl-item-label{
  font-size: 0.7rem;
}

/*单个控制组件*/
.container .operation-view .operation-bottom .ctrl-item .ctrl-item-element{
  display: flex;
  align-items: center;
  align-content: center;
}

/*控制中心区域结束*/

/*看板区域*/
.container .board-view{
  flex: 1;
  width: -webkit-fill-available;
